@model IEnumerable<summerschool.DTO.StudentDTO>

<h1>Öğrenciler</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>E-posta</th>
            <th>Bakiye</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Stname</td>
                <td>@student.Stlastname</td>
                <td>@student.Stnumber</td>
                <td>@student.Stmail</td>
                <td>@student.Stbalance</td>
                <td>
                    <!-- Silme İşlemi İçin Form -->
                    <form method="post" action="@Url.Action("DeleteStudent", "Students")" style="display:inline;">
                        <input type="hidden" name="id" value="@student.Stid" />
                        <button type="submit" class="btn btn-danger btn-sm">Sil</button>
                    </form>

                    <!-- Bakiye Ekleme İşlemi İçin Form -->
                    <form method="post" action="@Url.Action("AddBalance", "Students")" style="display:inline;">
                        <input type="hidden" name="id" value="@student.Stid" />
                        <input type="number" name="amount" class="form-control form-control-sm" placeholder="Bakiye"
                            required style="width: 100px; display: inline-block;" min="0" step="any" />
                        <button type="submit" class="btn btn-success btn-sm">Ekle</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="button-group mt-3 d-flex justify-content-end">
    <a class="btn btn-primary" href="@Url.Action("AddStudent", "Students")">Yeni Öğrenci Ekle</a>
</div>
